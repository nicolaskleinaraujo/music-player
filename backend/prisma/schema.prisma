generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           Int        @id @default(autoincrement())
  user         String     @unique
  password     String
  refreshToken String?
  playlists    Playlist[]
}

model Playlist {
  id     Int     @id @default(autoincrement())
  name   String
  userId Int
  user   User    @relation(fields: [userId], references: [id])
  musics Music[]
}

model Music {
  id       Int    @id @default(autoincrement())
  title    String
  channel  String
  url      String
  filePath String?

  Playlist   Playlist @relation(fields: [playlistId], references: [id])
  playlistId Int
}
